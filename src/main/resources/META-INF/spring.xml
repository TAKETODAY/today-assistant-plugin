<idea-plugin>

  <extensions defaultExtensionNs="com.intellij">

    <spring.configSearcherScopeModifier order="last"
        implementation="cn.taketoday.assistant.beans.PackagesConfigSearcherScopeModifier" />
    <spring.componentScanExtender implementation="cn.taketoday.assistant.beans.TodayComponentScanExtender" />

    <spring.testingAnnotationsProvider implementation="cn.taketoday.assistant.beans.TestingAnnotationsProvider" />

    <spring.customLocalComponentsDiscoverer implementation="cn.taketoday.assistant.beans.BeansProvider" />
    <spring.customLocalComponentsDiscoverer implementation="cn.taketoday.assistant.beans.ConfigurationPropertiesDiscoverer" />

    <spring.customModuleComponentsDiscoverer implementation="cn.taketoday.assistant.beans.ImplicitBeansProvider" />
    <spring.testingImplicitContextsProvider implementation="cn.taketoday.assistant.beans.TestingImplicitContextsProvider" />

  </extensions>

</idea-plugin>